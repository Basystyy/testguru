<div class="row justify-content-center mt-3">    
  <div>  
    <h1><%= t('.header') %></h1>

    <%= link_to t('form.test_list'), tests_path %><br>

    <%= link_to t('form.new'), new_user_registration_path %><br>

    <%= link_to t('form.login'), new_user_session_path %><br>

    <%= link_to t('.new_test'), new_admin_test_path %><br>

    <%= link_to t('.gists'), admin_gists_path, method: :get %>

    <%= render 'shared/errors', resource: @test %>

    <table class="table table-auto">
      <tr>
        <th class="sort-by-title pointer text-center">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th class="text-center"><%= t('.level') %></th>
        <th class="text-center"><%= t('.question') %></th>
        <th colspan="3", class="text-center"><%= t('.actions') %></th>
      </tr>

      <%= render @tests %>
    </table>
  </div>
</div>

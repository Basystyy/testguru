<!DOCTYPE html>
<html>
  <head>
    <title>Testguru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/header' %>

    <h2>
      <%= render 'shared/flash' %>
    </h2>

    <% if user_signed_in? %>
      <p class="nav user">
        <%= t('header.welcome', email: current_user.email) %><br>
        <%= link_to t('header.logout'), destroy_user_session_path, method: :delete, data: { confirm: t('form.you_sure') } %>
      </p>
    <% end %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
